<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.plantandfood.aspirelite.MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MainView"
        android:layout_above="@+id/ResetButton"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:id="@+id/PlantStageLayout">

                <Spinner
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/PlantStageSpinner"
                    android:spinnerMode="dialog"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/PlantStageLabel"
                    android:layout_toEndOf="@+id/PlantStageLabel"
                    android:layout_centerVertical="true"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearance"
                    android:text="@string/PlantStageLabel"
                    android:id="@+id/PlantStageLabel"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:id="@+id/BrixReadingsLayout"
                android:nestedScrollingEnabled="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearance"
                        android:text="@string/BrixReadingsLabel"
                        android:id="@+id/BrixReadingsLabel"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/BrixPlus"
                        android:layout_toRightOf="@+id/BrixReadingsLabel"
                        android:layout_toStartOf="@+id/BrixMinus"
                        android:layout_toLeftOf="@+id/BrixMinus"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/Plus"
                        android:minHeight="48dp"
                        android:src="@drawable/ic_add_circle_outline_24dp"
                        android:onClick="addEntry"
                        style="?android:attr/borderlessButtonStyle"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/BrixMinus"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/Minus"
                        android:minHeight="48dp"
                        android:src="@drawable/ic_remove_circle_outline_24dp"
                        android:onClick="rmEntry"
                        style="?android:attr/borderlessButtonStyle" />

                </RelativeLayout>

            <com.plantandfood.aspirelite.ExpandedGrid
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/BrixEntryLayout"
                android:useDefaultMargins="false"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:columnWidth="60dp"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:numColumns="auto_fit"
                android:minHeight="100dp">
            </com.plantandfood.aspirelite.ExpandedGrid>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MessageList">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Reset"
        android:id="@+id/ResetButton"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="resetResults"
        android:drawableLeft="@drawable/ic_clear_24dp" />

</RelativeLayout>
